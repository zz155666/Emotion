<Page x:ConnectionId='1'
    x:Class="Emotion.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Emotion"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:data="using:Emotion.Core.ViewModels">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <RelativePanel Grid.Row="0"
                       Background="{ThemeResource SystemControlHighlightAltListAccentLowBrush}"
                       Padding="0,9,0,9">
            <!--顶部-->
            <Button x:ConnectionId='7' Name="Home"
                    Content="&#xE700;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="24"
                    RelativePanel.AlignLeftWithPanel="True"
                    RelativePanel.AlignVerticalCenterWithPanel="True"
                    Background="Transparent"
                                      
                    >
            </Button>
            <TextBlock x:ConnectionId='8' Name="PageTitle"
                       Text="首页"
                       RelativePanel.RightOf="Home"
                       RelativePanel.AlignVerticalCenterWithPanel="True"
                       FontSize="24"
                       FontFamily="微软雅黑"
                       Padding="20,0,0,0">
            </TextBlock>
            <TextBlock x:ConnectionId='9' Name="ListCount"
                       FontSize="14"
                       RelativePanel.RightOf="PageTitle"
                       RelativePanel.AlignTopWith="PageTitle"
                       Margin="10,0,0,0"
                       Text="">
            </TextBlock>
            <Button x:ConnectionId='10' Name="RefreshButton"
                    Content="&#xE117;"
                    RelativePanel.AlignRightWithPanel="True"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="24"
                    RelativePanel.AlignVerticalCenterWithPanel="True"
                    Margin="0,0,5,0"
                    Background="Transparent"
                                               >
            </Button>
        </RelativePanel>
        <GridView x:ConnectionId='2' Name="BlogsListView"
                  Grid.Row="1"
                  Padding="10,10,10,10"
                  CanReorderItems="True"
                  IsItemClickEnabled="True"
                  SelectionMode="None"
                                                     
                                                    
                  >
            <GridView.ItemTemplate>
                <DataTemplate                           >
                    <Grid x:ConnectionId='4'  Padding="25,0,25,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="220"></RowDefinition>
                            <RowDefinition Height="50"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Image x:ConnectionId='5' Grid.Row="0"                           
                                       Width="200"
                                       RelativePanel.AlignLeftWithPanel="True"
                                       Name="coverUrl"
                                       >
                        </Image>
                        <Image Grid.Row="1" Width="200" RelativePanel.AlignBottomWithPanel="True"  VerticalAlignment="Center" Source="Assets/img_expression-package.png">
                        </Image>
                        <TextBlock x:ConnectionId='6' Grid.Row="1"                       
                                               FontSize="22"
                                               HorizontalAlignment="Center"
                                   Margin="10,10,10,5"
                                               >
                        </TextBlock>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>

        </GridView>
        <ProgressRing x:ConnectionId='3' Grid.Row="1"
                      Name="Loading"
                      Width="100"
                      Height="100"
                      IsActive="True">
            
        </ProgressRing>
    </Grid>
</Page>

